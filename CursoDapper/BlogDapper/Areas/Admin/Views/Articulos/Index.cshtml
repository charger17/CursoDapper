@model IEnumerable<Articulo>
@{
    ViewData["Title"] = "Lista de Categorias";
}


<div class="row m-2">
    <div class="col-sm-12 col-md-9">
        <h1>Admintrador de Articulos</h1>
    </div>
    <div class="col-sm-12 col-md-3">
        <a asp-action="Crear" class="btn btn-outline-primary float-end"> <i class="bi bi-plus-square"></i> Agregar Articulo</a>
    </div>
</div>

<div class=" card bg-light p-3 table-responsive-modif">
    <table class="table" id="tblArticulos">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Imagen</th>
                <th>Estado</th>
                <th>Categoria</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>


@section Scripts{
    <script src="~/js/articulos.js"></script>
}