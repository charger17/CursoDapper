@model Articulo
@{
    ViewData["Title"] = "Asignar Etiquetas a Articulo";
}


<h1>Asignar Etiquetas a Articulo</h1>

<hr />
<div class="row bg-light border p-4">
    <form asp-action="AsignarEtiquetas">
        <div class="col-sm-12 col-md-12 col-lg-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group m-4">
                <label asp-for="IdArticulo" class="control-label"></label>
                <input asp-for="IdArticulo" class="form-control" readonly />
                <span asp-validation-for="IdArticulo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-8">
            <h3>Seleccionar Etiquetas para el artículo</h3>
            <div class="form-group m-4">
                @Html.DropDownList("IdEtiqueta", (SelectList)ViewBag.SelectList,
                "-Selecciona una etiqueta-", htmlAttributes: new {@class = "form-control"})
            </div>
            <div class="form-group m-4">
                <div class="col-sm-12 col-md-6">
                    <input type="submit" value="Asignar Etiqueta" class="btn btn-outline-primary form-control" />
                </div>
                <div class="col-sm-12 col-md-6">
                    <a asp-action="Index" class="btn btn-outline-warning form-control">Volver a lista</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}