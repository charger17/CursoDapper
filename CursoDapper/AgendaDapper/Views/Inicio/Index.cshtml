@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<h1>Administrador de clientes</h1>

<p>
    <a asp-action="Crear" class="btn btn-primary">Agregar Cliente</a>
</p>

<div class="table-responsive-modif">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor( m => m.IdCliente)</th>
                <th>@Html.DisplayNameFor( m => m.Nombres)</th>
                <th>@Html.DisplayNameFor( m => m.Apellidos)</th>
                <th>@Html.DisplayNameFor( m => m.Telefono)</th>
                <th>@Html.DisplayNameFor( m => m.Email)</th>
                <th>@Html.DisplayNameFor( m => m.Pais)</th>
                <th>@Html.DisplayNameFor( m => m.FechaCreacion)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        @if (Model.Count() < 0)
        {
            <tbody>No hay nada que mostrar</tbody>
        }
        else
        {
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@Html.DisplayFor( m => item.IdCliente)</th>
                    <th>@Html.DisplayFor( m => item.Nombres)</th>
                    <th>@Html.DisplayFor( m => item.Apellidos)</th>
                    <th>@Html.DisplayFor( m => item.Telefono)</th>
                    <th>@Html.DisplayFor( m => item.Email)</th>
                    <th>@Html.DisplayFor( m => item.Pais)</th>
                    <th>@Html.DisplayFor( m => item.FechaCreacion)</th>
                    <th>
                            <a asp-action="Editar" asp-rout-id="@item.IdCliente" class="btn btn-info">Editar</a>
                            <a asp-action="Borrar" asp-rout-id="@item.IdCliente" class="btn btn-danger">Borrar</a>
                    </th>
                </tr>
            }

        </tbody>
        }
    </table>

</div>